<section class="hero is-medium is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title is-size-1 has-text-centered">
        台北の観光スポットを知りましょう
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <%= form_with url: search_path, method: :get, local: true do |f| %>
          <div class="select is-primary is-rounded">
            <%= collection_select(:category, :id, @categories, :api_id, :name) %>
          </div>
          <%= f.submit "検索する", class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>